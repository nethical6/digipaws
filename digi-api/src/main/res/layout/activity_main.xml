<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <TextView
        android:id="@+id/coin_count"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="Coins: idk" />
    
    <TextView
        android:id="@+id/mode"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="Mode: idk" />
    
    <TextView
        android:id="@+id/focus_quest"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="Is Focus Quest Active: idk" />

     <TextView
        android:id="@+id/is_added_to_list"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:text="Is added to list: nah" />

    
    <Button
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/permission"
         android:text="Request Permission" />
    
     <Button
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/addToQuests"
         android:text="Add to Available Quests list" />

    <Button
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/inc_coin"
         android:text="increment coin" />

</LinearLayout>